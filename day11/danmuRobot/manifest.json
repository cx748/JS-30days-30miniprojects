{
  "name": "super danmu robot",
  "version": "1.0",
  "description": "send customize danmu automatically",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://www.douyu.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "danmu",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"]
}
